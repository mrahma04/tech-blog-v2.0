<div class="col-12 col-md-12">
    <div class="card">
        <h3 class="card-header" style="display: flex; justify-content: space-between;">
            <div>
                {{post.title}}
            </div>
            <div style="font-weight: normal; font-size: 1rem;">
                Posted by {{post.user.username}} on {{post.post_created_at}}
            </div>
        </h3>
        <p>{{post.post_content}}</p>
    </div>
</div>
{{#if loggedIn}}
<div class="col-12 col-md-12">
    <div class="card">
        <h3 class="card-header" style="display: flex; justify-content: space-between;"></h3>
        <div class="card-body" style="padding: 1.5%">
            <form action="" id="comment-form">
                <div>
                    <div style="padding-bottom: 0.25rem">
                        <label for="comment" style="font-size: 1.2rem;">Comment</label>
                    </div>
                    <textarea name="" id="comment" style="width: 100%; height: 7em;"></textarea>
                </div>
                <div>
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}
{{#each post.comments as |comment|}}
<div class="col-12 col-md-12">
    <div class="card">
        <h3 class="card-header" style="display: flex; justify-content: space-between;">
            <div style="font-weight: normal; font-size: 1rem;">
                Posted by {{user.username}} on {{comment_created_at}}
            </div>
        </h3>
        <p>{{comment_text}}</p>
    </div>
</div>
{{/each}}
{{#if loggedIn}}
<script src="/assets/javascript/comment.js"></script>
{{/if}}