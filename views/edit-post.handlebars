<article>
    <div class="col-12 col-md-12">
        <div class="card">
            <h3 class="card-header" style="display: flex; justify-content: space-between;">Edit Post</h3>
            <div class="card-body" style="padding: 1.5%">
                <form action="" id="edit-post-form";>
                    <div>
                        <div style="padding-bottom: 0.25rem">
                            <label for="post-title" style="font-size: 1.2rem;">Title</label>
                        </div>
                        <input name="" id="post-title" style="width: 100%; height: 3em;" value="{{post.title}}"></input>
                    </div>
                    <div>
                        <div style="padding-bottom: 0.25rem">
                            <label for="post-content" style="font-size: 1.2rem;">Content</label>
                        </div>
                        <textarea name="" id="post-content" style="width: 100%; height: 6em;">{{post.post_content}}</textarea>
                    </div>
                    <div>
                        <button id="update-post" class="btn" style="margin-top: 1%">Update Post</button>
                    </div>
                    <div>
                        <button id="delete-post" class="btn" style="margin-top: 1%">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</article>
<script src="/assets/js/edit-post.js"></script>